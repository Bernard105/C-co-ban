#include<iostream>
using namespace std;

int main()
{
	int day;
	cout << "Enter number : ";
	cin >> day;
	while (day != 0)
	{
		if (day > 7)
		{
			day %= 7;
		}

		switch (day) {
		case 1:
			cout << "Today is sunday. Have goodday!" << endl;
			break;
		case 2:
			cout << "Today is monday. Have goodday!" << endl;
			break;
		case 3:
			cout << "Today is tuesday. Have goodday!" << endl;
			break;
		case 4:
			cout << "Today is Wednesday. Have goodday!" << endl;
			break;
		case 5:
			cout << "Today is Thursday. Have goodday!" << endl;
			break;
		case 6:
			cout << "Today is Friday. Have goodday!" << endl;
			break;
		case 7:
			cout << "Today is Saturday. Have goodday!" << endl;
			break;
		}
		break;
	}

	return 1;
}
