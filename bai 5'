#include<iostream>
using namespace std;

int main()
{
	int n;
	int gt = 1;

	cout << "Nhap n " << endl;
	cin >> n;

	if (n < 0) {
		cout << "So nguyen am khong co giai thua. Vui long nhap khac" << endl;
	}
	else if (n == 0) {
		cout << "Giai thua cua " << n << " la 1" << endl;
	}
	else if (n > 0) {
		for (int i = 1; i <= n; i++) {
			gt *= i;
		}
		cout << "Giai thua cua " << n << " la " << gt << endl;
	}
}
